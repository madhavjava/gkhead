<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="cache.provider_class">org.hibernate.cache.EhCacheProvider</property>
        <mapping class="org.mifos.platform.questionnaire.domain.EventEntity" />
        <mapping class="org.mifos.platform.questionnaire.domain.EventSourceEntity"/>
        
        <mapping class="org.mifos.platform.questionnaire.domain.QuestionGroupLink"/>
        <mapping class="org.mifos.platform.questionnaire.domain.SectionQuestionLink"/>
        <mapping class="org.mifos.platform.questionnaire.domain.SectionLink"/>
        
        <mapping resource="org/mifos/platform/questionnaire/domain/QuestionEntity.hbm.xml" />
        <mapping resource="org/mifos/platform/questionnaire/domain/QuestionChoiceEntity.hbm.xml" />
        <mapping resource="org/mifos/platform/questionnaire/domain/QuestionGroup.hbm.xml" />
        <mapping resource="org/mifos/platform/questionnaire/domain/Section.hbm.xml" />
        <mapping resource="org/mifos/platform/questionnaire/domain/SectionQuestion.hbm.xml" />

        <mapping resource="org/mifos/platform/questionnaire/domain/QuestionGroupInstance.hbm.xml" />
        <mapping resource="org/mifos/platform/questionnaire/domain/QuestionGroupResponse.hbm.xml" />
        <mapping resource="org/mifos/platform/questionnaire/domain/ChoiceTagEntity.hbm.xml" />
        <mapping resource="org/mifos/platform/questionnaire/domain/InformationOrder.hbm.xml" />
    </session-factory>
</hibernate-configuration>
